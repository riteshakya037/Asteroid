<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/textColorSecondary">
    <!--Insipired by the new google GMail ripple-->
    <item
        android:id="@android:id/mask"
        android:bottom="2dp"
        android:left="8dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="@dimen/list_item_padding"
                android:topLeftRadius="@dimen/list_item_padding" />
            <solid android:color="@color/textColorSecondary" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
            android:drawable="@drawable/list_background"
            android:insetLeft="@dimen/list_item_padding" />
    </item>
</ripple>