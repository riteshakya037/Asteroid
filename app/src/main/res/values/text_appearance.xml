<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.Title" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Heading" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SingleLineText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>